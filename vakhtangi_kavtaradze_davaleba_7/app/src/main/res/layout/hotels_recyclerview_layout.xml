<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="Serializer"
            type="com.example.vakhtangi_kavtaradze_davaleba_7.Serializer.Serializer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_marginVertical="10dp"
            android:id="@+id/Image"
            android:src="@{Serializer.cover}"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_marginVertical="20dp"

            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="9dp"
            android:layout_height="wrap_content"
            android:text="@{Serializer.title}"
            android:textAlignment="center"
            android:textColor="#F4E1E1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="7dp"
            android:text="@{Serializer.description}"
            android:textColor="#FFE6E6"
            android:textSize="13sp" />

    </LinearLayout>
</layout>